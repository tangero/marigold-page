source "https://rubygems.org"

gem "jekyll", "~> 4.3.3"
gem "webrick", "~> 1.8"

# Základní Jekyll pluginy
group :jekyll_plugins do
  gem "jekyll-sitemap", "~> 1.4.0"    # pro generování sitemap.xml
  gem "jekyll-feed", "~> 0.17.0"      # pro generování RSS feedů
  gem "jekyll-seo-tag", "~> 2.8.0"    # pro SEO meta tagy
  gem "jekyll-paginate", "~> 1.1.0"   # pro stránkování
  gem "kramdown-parser-gfm", "~> 1.1.0" # pro GitHub Flavored Markdown
end

# Dodatečné závislosti pro development
group :development do
  gem "rouge", "~> 4.1.0"             # pro zvýrazňování syntaxe
end