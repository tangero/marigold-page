---
layout: default
---

<div class="tech-news-container">
  <header class="tech-news-header">
    <h1 align="center">{{ page.title }}</h1>
  </header>

  <!-- Filtry -->
  <div class="tech-news-filters">
    <!-- Obecné filtry -->
    <button class="filter-btn active" data-filter="all" data-type="category">🌟 Vše</button>

    <!-- Filtry podle důležitosti -->
    <div class="filter-separator">Důležitost:</div>
    <button class="filter-btn" data-filter="5" data-type="importance">🔥 Kritická</button>
    <button class="filter-btn" data-filter="4" data-type="importance">⚡ Vysoká</button>
    <button class="filter-btn" data-filter="3" data-type="importance">📢 Střední</button>
  </div>

  <!-- Seznam zpráv -->
  <div class="tech-news-container">
    {% comment %} Získat nejnovějších 18 článků {% endcomment %}
    {% if site.tech_news %}
      {% assign all_dates = site.tech_news | map: 'date' | uniq | sort | reverse %}
      {% comment %} Seřadit články podle data (nejnovější první) a vzít prvních 18 {% endcomment %}
      {% assign sorted_articles = site.tech_news | sort: 'publishedAt' | reverse %}
      {% assign recent_articles = sorted_articles | limit: 18 %}
    {% else %}
      {% assign all_dates = "" | split: "," %}
      {% assign sorted_articles = "" | split: "," %}
      {% assign recent_articles = "" | split: "," %}
    {% endif %}

    <!-- Navigace dnů -->
    <div class="date-navigation">
      <div class="date-selector">
        {% comment %} Najít předchozí a následující den {% endcomment %}
        {% assign latest_date = all_dates[0] %}
        {% assign prev_date = "" %}
        {% assign next_date = "" %}

        {% for date in all_dates %}
          {% if forloop.index == 2 %}
            {% assign prev_date = date %}
            {% break %}
          {% endif %}
        {% endfor %}

        {% if prev_date != "" %}
          <a href="/tech-news/{{ prev_date | date: '%Y-%m-%d' }}/" class="date-nav-link" title="Starší články">
            &larr; {{ prev_date | date: "%d.%m.%Y" }}
          </a>
        {% endif %}

        <div class="current-date">
          <span class="current-date-display">18 nejnovějších článků</span>
        </div>

        {% comment %} Next date would be today, but we're already showing latest {% endcomment %}
      </div>

      <div class="date-info">
        <span class="articles-count">{{ recent_articles.size }} článků</span>
      </div>
    </div>

    <!-- Grid nejnovějších 18 článků -->
    <div class="tech-news-grid">
      {% for article in recent_articles %}
      <article class="tech-news-card" data-category="{{ article.category }}" data-importance="{{ article.importance }}">
        <div class="tech-news-meta">
          <span class="tech-news-emoji">{{ article.source.emoji }}</span>
          <div class="tech-news-info">
            <span class="tech-news-source">{{ article.source.name }}</span>
            <time class="tech-news-date" datetime="{{ article.publishedAt }}" data-utc="{{ article.publishedAt }}">
              {{ article.publishedAt | date: "%d.%m.%Y %H:%M" }}
            </time>
          </div>
          <div class="importance-indicator importance-{{ article.importance }}">
            {% assign stars = article.importance %}
            {% for i in (1..5) %}
              {% if i <= stars %}
                <span class="star filled">★</span>
              {% else %}
                <span class="star">☆</span>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        {% if article.urlToImage %}
        <div class="tech-news-image">
          <img src="{{ article.urlToImage }}" alt="{{ article.title }}" loading="lazy" decoding="async" crossorigin="anonymous" referrerpolicy="no-referrer" data-backup="{{ article.urlToImageBackup }}" onerror="handleImageError(this, '{{ article.url }}');" width="380" height="200">
        </div>
        {% endif %}

        <div class="tech-news-content">
          <h2 class="tech-news-title">
            <a href="{{ article.url | relative_url }}">{{ article.title }}</a>
          </h2>

          <p class="tech-news-description">{{ article.description }}</p>

          <div class="tech-news-actions">
            <a href="{{ article.url }}" class="tech-news-link" target="_blank" rel="noopener">
              Číst na {{ article.source.name }}
              <svg class="external-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6M15 3h6v6M10 14L21 3"/>
              </path>
            </svg>
            </a>
            <span class="tech-news-category">{{ article.category }}</span>
          </div>

          <!-- Firmy a osobnosti -->
          {% if article.companies or article.people %}
          <div class="tech-news-entities">
            {% if article.companies %}
            <div class="tech-news-companies">
              <span class="entity-label">🏢</span>
              {% for company in article.companies %}
                <span class="entity-tag company-tag">{{ company }}</span>
              {% endfor %}
            </div>
            {% endif %}

            {% if article.people %}
            <div class="tech-news-people">
              <span class="entity-label">👤</span>
              {% for person in article.people %}
                <span class="entity-tag person-tag">{{ person }}</span>
              {% endfor %}
            </div>
            {% endif %}
          </div>
          {% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
  </div>

  {% if site.tech_news.size == 0 %}
  <div class="tech-news-empty">
    <p>🔄 Zprávy se právě načítají... První aktualizace proběhne automaticky pomocí GitHub Actions.</p>
  </div>
  {% endif %}
</div>

<script>
// Clicky tracking pro tech-news
function initTechNewsTracking() {
  if (typeof clicky === 'undefined' || !window.clicky) {
    return;
  }

  // Jednoduchý tracking kliknutí na články
  document.querySelectorAll('.tech-news-title a').forEach(function(link) {
    link.addEventListener('click', function(e) {
      const card = this.closest('.tech-news-card');
      const category = card?.dataset.category || 'tech';
      const importance = card?.dataset.importance || '3';

      clicky.log(
        '#tech-news-click/' + category + '/' + importance,
        'Tech News: ' + this.textContent.trim().substring(0, 60),
        'click'
      );
    });
  });

  // Track filtrů s debounce
  let filterTimeout;
  document.querySelectorAll('.filter-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      clearTimeout(filterTimeout);
      filterTimeout = setTimeout(() => {
        clicky.log(
          '#tech-news-filter/' + this.dataset.type + '/' + this.dataset.filter,
          'Filter: ' + this.textContent.trim().split(' (')[0],
          'click'
        );
      }, 100);
    });
  });
}

// Handling chyb obrázků
function handleImageError(imgElement, articleUrl) {
  console.warn('Obrázek se nenačetl:', imgElement.src);

  // Zkusit backup URL z front matter pokud existuje
  const article = imgElement.closest('.tech-news-card');
  if (article && article.dataset.backupImage) {
    const backupImg = new Image();
    backupImg.onload = function() {
      imgElement.src = article.dataset.backupImage;
      return;
    };
    backupImg.onerror = function() {
      showEmojiPlaceholder(imgElement);
    };
    backupImg.src = article.dataset.backupImage;
  } else {
    showEmojiPlaceholder(imgElement);
  }
}

// Zobrazit emoji placeholder místo obrázku
function showEmojiPlaceholder(imgElement) {
  const card = imgElement.closest('.tech-news-card');
  const category = card ? card.dataset.category : 'default';

  // Najít kategoriyi v mapě
  const emojiMap = {
    'ai': '🤖', 'machine-learning': '🧠', 'cybersecurity': '🔐', 'privacy': '🛡️',
    'security': '🔒', 'space': '🚀', 'astronomy': '🌌', 'mobile': '📱',
    'apps': '📲', 'software': '💻', 'web': '🌐', 'development': '⚙️',
    'gaming': '🎮', 'graphics': '🎨', 'health': '🏥', 'medicine': '💊',
    'energy': '⚡', 'climate': '🌍', 'automotive': '🚗', 'transport': '🚆',
    'infrastructure': '🏗️', 'internet': '📡', 'media': '🎬', 'entertainment': '🎭',
    'science': '🔬', 'research': '📊', 'technology': '🔧', 'hardware': '⚙️',
    'cloud': '☁️', 'data': '📈', 'blockchain': '⛓️', 'crypto': '₿',
    'network': '🌐', '5g': '📶', 'ar': '👓', 'vr': '🥽',
    'robotics': '🤖', 'iot': '📡', 'wearables': '⌚', 'quantum': '⚛️',
    'biotech': '🧬', 'nanotechnology': '🔬', 'herní-průmysl': '🎮',
    'programování': '💻', 'umělá-inteligence': '🤖', 'default': '📰'
  };

  const emoji = emojiMap[category] || emojiMap['default'];

  // Skrýt obrázek a zobrazit emoji container
  imgElement.parentElement.innerHTML = `
    <div class="emoji-placeholder" style="
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100%;
      width: 100%;
      background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
      font-size: 3.5rem;
      color: #cbd5e0;
    ">
      ${emoji}
    </div>
  `;

  console.info('Zobrazeno emoji místo obrázku pro kategorii:', category);
}


// Převod času na místní časovou zónu
function convertTimesToLocal() {
  const timeElements = document.querySelectorAll('.tech-news-date[data-utc]');

  timeElements.forEach(timeEl => {
    const utcTime = timeEl.dataset.utc;
    if (!utcTime) return;

    try {
      const date = new Date(utcTime);

      // Formát: dd.mm.yyyy hh:mm (CET/CEST)
      const options = {
        day: '2-digit',
        month: '2-digit',
        year: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        timeZone: 'Europe/Prague', // CET/CEST
        timeZoneName: 'short'
      };

      const formatter = new Intl.DateTimeFormat('cs-CZ', options);
      const parts = formatter.formatToParts(date);

      // Sestavit formát dd.mm.yyyy hh:mm CET
      const day = parts.find(p => p.type === 'day').value;
      const month = parts.find(p => p.type === 'month').value;
      const year = parts.find(p => p.type === 'year').value;
      const hour = parts.find(p => p.type === 'hour').value;
      const minute = parts.find(p => p.type === 'minute').value;
      const timeZone = parts.find(p => p.type === 'timeZoneName').value;

      timeEl.textContent = `${day}.${month}.${year} ${hour}:${minute} ${timeZone}`;

    } catch (e) {
      console.warn('Chyba převodu času:', utcTime, e);
    }
  });
}

// Inicializace se optimalizacemi
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initTechNews);
} else {
  initTechNews();
}

function initTechNews() {
  // Převést časy
  convertTimesToLocal();

  // Inicializovat tracking
  initTechNewsTracking();

  // Setup filtry
  const filterBtns = document.querySelectorAll('.filter-btn');
  const newsCards = document.querySelectorAll('.tech-news-card');

  // Počty filtry
  updateFilterCounts(filterBtns, newsCards);

  // Event listenery pro filtrování
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => filterArticles(btn, filterBtns, newsCards));
  });
}

function updateFilterCounts(buttons, cards) {
  buttons.forEach(btn => {
    if (btn.dataset.filter === 'all') {
      btn.textContent = `${btn.textContent.split(' (')[0]} (${cards.length})`;
      return;
    }

    const count = Array.from(cards).filter(card =>
      card.dataset.importance === btn.dataset.filter
    ).length;

    btn.textContent = `${btn.textContent.split(' (')[0]} (${count})`;
    btn.style.display = count > 0 ? 'inline-block' : 'none';
  });
}

function filterArticles(activeBtn, allBtns, cards) {
  allBtns.forEach(b => b.classList.remove('active'));
  activeBtn.classList.add('active');

  const filter = activeBtn.dataset.filter;
  const type = activeBtn.dataset.type;

  cards.forEach(card => {
    const show = filter === 'all' || card.dataset[type] === filter;
    card.style.display = show ? 'block' : 'none';
  });
}
</script>

